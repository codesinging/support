{
    "name": "codesinging/support",
    "description": "Awesome support helpers for PHP web development.",
    "license": "MIT",
    "authors": [
        {
            "name": "codesinging",
            "email": "codesinging@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "CodeSinging\\Support\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload-dev": {
        "psr-4": {
            "CodeSinging\\Support\\Tests\\": "tests"
        }
    }
}
